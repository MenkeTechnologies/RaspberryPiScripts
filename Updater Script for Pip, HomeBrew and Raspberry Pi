echo -e "\033[44m\033[37mUpdating Python Programs"
outdated=`pip list --outdated | awk '{print $1}'`

for i in $outdated; do
	pip install --upgrade $i
done

echo "Updating Brew Programs"
brew update
brew upgrade

echo -e "\033[44m\033[37mUpdating Pi Dependencies"
ssh -t pi@ipp "yes | sudo apt-get update; yes | sudo apt-get upgrade"

echo -e "Done\033[0m"
